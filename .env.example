# Market Data Provider Configuration
# Choose between: "twelvedata" (default), "finnhub", or "yfinance"
MARKET_DATA_PROVIDER=twelvedata

# Twelve Data API Configuration (required if MARKET_DATA_PROVIDER=twelvedata)
# Get your API key at: https://twelvedata.com/
TWELVE_DATA_API_KEY=your_api_key_here

# Finnhub API Configuration (required if MARKET_DATA_PROVIDER=finnhub)
# Get your API key at: https://finnhub.io/register
# FINNHUB_API_KEY=your_api_key_here

# YFinance Market Data Service (required if MARKET_DATA_PROVIDER=yfinance)
# This is a self-hosted Python microservice using yfinance library.
# No API key required - just run the service and configure the URL.
# Default: http://localhost:8000
# For Kubernetes: http://market-data-service:8000
# YFINANCE_BASE_URL=http://localhost:8000

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=localhost

# Application Configuration
PRICE_REFRESH_INTERVAL=60s
LOG_LEVEL=info

# Database Configuration
# Supported drivers: "postgres" or "oracle"
DB_DRIVER=postgres

# PostgreSQL Connection String
DB_DSN=postgres://postgres:postgres@localhost:5432/stocktracker?sslmode=disable

# Oracle Connection String (use this format if DB_DRIVER=oracle)
# DB_DSN=oracle://user:password@host:port/service_name
# 
# Example with SSL/TLS:
# DB_DSN=oracle://user:password@host:port/service_name?SSL=enable&SSL Verify=false
#
# Example with TNS alias (requires tnsnames.ora):
# DB_DSN=oracle://user:password@tns_alias
